<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    
    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />

    <style name="AppTheme2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Additional styles for your app -->
        <item name="android:windowBackground">@color/my_on_primary</item> <!-- Set the background color -->
        <item name="android:textColor">@color/my_on_secondary</item> <!-- Set default text color -->
        <item name="android:buttonStyle">@style/MyButtonStyle</item> <!-- Use a custom button style -->
        <item name="android:textAppearance">@style/MyTextStyle</item> <!-- Set default text appearance -->
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/my_primary</item>
        <item name="android:textColor">@color/my_on_primary</item>
        <item name="android:padding">12dp</item>
        <item name="android:buttonCornerRadius">8dp</item> <!-- Rounded corners -->
        <item name="android:gravity">center</item> <!-- Center the text -->
    </style>

    <style name="MyTextStyle">
        <item name="android:gravity">center</item> <!-- Center the text -->
        <item name="android:textColor">@color/my_on_secondary</item> <!-- Set default text color -->
        <item name="android:textSize">16sp</item> <!-- Set default text size (customize as needed) -->
         <!-- Set default text style (customize as needed) -->
    </style>


</resources>